<h1>Burger Maker</h1>
<div class="row">
    <div class="col-6">
        <ul class="list-group">
            {{#each burgerHBS}}
            <li class="list-group-item">
                {{this.id}}/Burger: <b>{{this.burger_name}}</b>        
        <form action='/burger/{{this.id}}' method="post"><button onclick="devour('{{this.id}}')" class="btn btn-primary btn-lg float-right">DEVOUR</button></form>
        </li>
        {{/each}}
        </ul>
    </div>
    <div class="col-6">
        <ul class="list-group mb-5">
            {{#each burgerHBS2}}
            <li class="list-group-item">
                {{this.id}}/Burger Devoured: <b>{{this.burger_name}}</b>
            </li>
            {{/each}}
        </ul>
    </div>
    <div class="card col-12">
    <div class="card-header">
        <h4>New Burger Order</h4>
    </div>
    <div class="card-body">
        <form action="/" method="POST">
            <textarea type="text" name="burgerEntry" class="form-control"></textarea>

            <button class="btn btn-primary btn-lg">Submit</button>
        </form>
    </div>
</div>
</div>